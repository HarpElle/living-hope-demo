---
import PageLayout from '../../layouts/PageLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import ContactForm from '../../components/forms/ContactForm.astro';
import { getAssetPath, getPagePath } from '../../utils/paths.js';
---

<PageLayout 
  title="Contact Us - Living Hope Lutheran Church"
  description="Get in touch with Living Hope Lutheran Church. Located at 1337 South 100th Street, West Allis, WI. Call 414-774-1184 or email church@livinghopelutheran.org"
>
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-primary-600 to-primary-800 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold mb-6">
          Contact Us
        </h1>
        <p class="text-xl md:text-2xl text-primary-200 mb-8">
          We'd love to hear from you and answer any questions
        </p>
        <p class="text-lg text-primary-200">
          Reach out anytime - we're here to help!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Get In Touch
          </h2>
          <p class="text-xl text-gray-600">
            Multiple ways to connect with our church family
          </p>
        </div>

        <!-- Church Welcome Sign Image -->
        <div class="mb-12">
          <div class="aspect-[16/9] rounded-2xl overflow-hidden shadow-xl max-w-2xl mx-auto">
            <img 
              src={getAssetPath("/images/church-welcome-sign.jpg")} 
              alt="Living Hope Lutheran Church welcome sign" 
              class="w-full h-full object-cover"
            >
          </div>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          
          <!-- Phone -->
          <Card variant="elevated" class="text-center">
            <div class="p-8">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Call Us</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">414-774-1184</p>
              <p class="text-gray-600 mb-4">Church Office</p>
              <p class="text-sm text-gray-500">
                Monday - Friday<br>
                9:00 AM - 4:00 PM
              </p>
            </div>
          </Card>

          <!-- Email -->
          <Card variant="elevated" class="text-center">
            <div class="p-8">
              <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Email Us</h3>
              <p class="text-lg font-bold text-primary-600 mb-2">church@livinghopelutheran.org</p>
              <p class="text-gray-600 mb-4">General Inquiries</p>
              <p class="text-sm text-gray-500">
                We typically respond<br>
                within 24 hours
              </p>
            </div>
          </Card>

          <!-- Address -->
          <Card variant="elevated" class="text-center">
            <div class="p-8">
              <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Visit Us</h3>
              <p class="text-gray-600 mb-2">
                <strong>1337 South 100th Street</strong><br>
                West Allis, WI 53214
              </p>
              <Button href="/contact/location" variant="primary" size="sm" class="mt-4">
                Get Directions
              </Button>
            </div>
          </Card>
        </div>

        <!-- Pastoral Staff Contact -->
        <Card class="bg-primary-50 border-primary-200">
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
              Contact Our Pastoral Team
            </h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
              
              <!-- Pastor Mark Aufdemberge -->
              <div class="text-center">
                <h4 class="font-bold text-gray-900 mb-2">Pastor Mark Aufdemberge</h4>
                <p class="text-primary-600 text-sm mb-2">maufdemberge@livinghopelutheran.org</p>
                <p class="text-gray-600 text-xs">Pastor</p>
              </div>

              <!-- Pastor Thomas Kneser -->
              <div class="text-center">
                <h4 class="font-bold text-gray-900 mb-2">Pastor Thomas Kneser</h4>
                <p class="text-primary-600 text-sm mb-2">tkneser@livinghopelutheran.org</p>
                <p class="text-gray-600 text-xs">Pastor</p>
              </div>

              <!-- Pastor Timothy Wempner -->
              <div class="text-center">
                <h4 class="font-bold text-gray-900 mb-2">Pastor Timothy Wempner</h4>
                <p class="text-primary-600 text-sm mb-2">twempner@livinghopelutheran.org</p>
                <p class="text-gray-600 text-xs">Pastor</p>
              </div>

              <!-- Pastor Joshua Zarling -->
              <div class="text-center">
                <h4 class="font-bold text-gray-900 mb-2">Pastor Joshua Zarling</h4>
                <p class="text-primary-600 text-sm mb-2">jzarling@livinghopelutheran.org</p>
                <p class="text-gray-600 text-xs">Pastor</p>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Send Us a Message
          </h2>
          <p class="text-xl text-gray-600">
            Have a question or want to learn more? We'd love to hear from you!
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">
          
          <!-- Contact Form -->
          <Card variant="elevated">
            <div class="p-8">
              <ContactForm 
                title="Get In Touch"
                description="We'd love to hear from you and will respond as soon as possible."
              />
            </div>
          </Card>

          <!-- Quick Info & FAQ -->
          <div class="space-y-8">
            
            <!-- Office Hours -->
            <Card>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Office Hours</h3>
                <div class="space-y-3">
                  <div class="flex justify-between">
                    <span class="text-gray-600">Monday - Friday</span>
                    <span class="font-medium text-gray-900">9:00 AM - 4:00 PM</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Saturday</span>
                    <span class="font-medium text-gray-900">By Appointment</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Sunday</span>
                    <span class="font-medium text-gray-900">Before/After Services</span>
                  </div>
                </div>
              </div>
            </Card>

            <!-- Emergency Contact -->
            <Card class="bg-red-50 border-red-200">
              <div class="p-6">
                <h3 class="text-xl font-bold text-red-800 mb-4">Emergency Pastoral Care</h3>
                <p class="text-red-700 mb-4">
                  For urgent pastoral care needs outside office hours, please call our main number and follow the prompts for emergency contact.
                </p>
                <p class="text-red-600 font-medium">414-774-1184</p>
              </div>
            </Card>

            <!-- FAQ -->
            <Card>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Common Questions</h3>
                
                <div class="space-y-4">
                  <div class="border-b border-gray-200 pb-4">
                    <h4 class="font-medium text-gray-900 mb-2">How quickly will you respond?</h4>
                    <p class="text-gray-600 text-sm">We typically respond to emails within 24 hours during business days.</p>
                  </div>

                  <div class="border-b border-gray-200 pb-4">
                    <h4 class="font-medium text-gray-900 mb-2">Can I schedule a meeting with a pastor?</h4>
                    <p class="text-gray-600 text-sm">Absolutely! Contact us to schedule a time that works for both of you.</p>
                  </div>

                  <div class="border-b border-gray-200 pb-4">
                    <h4 class="font-medium text-gray-900 mb-2">Do you offer counseling services?</h4>
                    <p class="text-gray-600 text-sm">Our pastors provide pastoral counseling and can refer you to professional counselors when appropriate.</p>
                  </div>

                  <div>
                    <h4 class="font-medium text-gray-900 mb-2">How can I get involved?</h4>
                    <p class="text-gray-600 text-sm">We'd love to help you find ways to serve! Contact us to learn about volunteer opportunities.</p>
                  </div>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">
          We're Here for You
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          Whether you're looking for a church home, have questions about faith, or need pastoral care, we're here to help.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/connect/im-new" variant="secondary" size="lg">
            Plan Your Visit
          </Button>
          <Button href={getPagePath("/about/staff")} variant="outline" size="lg">
            Meet Our Team
          </Button>
        </div>
      </div>
    </div>
  </section>

</PageLayout> 