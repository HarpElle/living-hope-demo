---
import PageLayout from '../../layouts/PageLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Accordion from '../../components/ui/Accordion.astro';
import { getAssetPath } from '../../utils/paths.js';

const faqItems = [
  {
    title: "What should I wear?",
    content: "Come as you are! You'll see everything from jeans to suits. We care more about your heart than your outfit.",
    isOpen: false
  },
  {
    title: "Is there parking available?",
    content: "Yes! We have a large parking lot with plenty of free spaces. Our greeters can help direct you.",
    isOpen: false
  },
  {
    title: "What about my kids?",
    content: "Kids are always welcome in worship! We also offer Sunday Morning Kids Club, Youth Group, Pioneer Program, and Catechism Confirmation Class.",
    isOpen: false
  },
  {
    title: "Will I be asked to do anything?",
    content: "Not at all! You can participate as much or as little as you're comfortable with. No pressure, just welcome.",
    isOpen: false
  },
  {
    title: "How long is the service?",
    content: "Our worship services typically last about 60 minutes, including music, scripture readings, sermon, and communion.",
    isOpen: false
  },
  {
    title: "Do you offer childcare?",
    content: "We welcome children in worship and also have age-appropriate programs. Our childcare center provides additional support for families.",
    isOpen: false
  }
];
---

<PageLayout title="I'm New" description="Planning your first visit to Living Hope Lutheran Church? Learn what to expect and let us know you're coming so we can welcome you properly.">
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-accent-600 to-accent-800 text-white pt-32 pb-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          We're So Glad You're Here!
        </h1>
        <p class="text-xl md:text-2xl text-accent-100 mb-8">
          Taking the first step to visit a new church can feel overwhelming. We're here to make it as welcoming and comfortable as possible.
        </p>
        <Button href="#plan-visit" variant="secondary-light" size="lg">
          Plan Your Visit
        </Button>
      </div>
    </div>
  </section>

  <!-- Welcome Video Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
            A Personal Welcome from<br class="hidden sm:inline"> Our Pastoral Team
          </h2>
          <p class="text-xl text-gray-600">
            Watch this short video to get a feel for our church community
          </p>
        </div>
        
        <!-- Video Player -->
        <div class="relative mb-8">
          <div class="aspect-video bg-gray-200 rounded-2xl overflow-hidden shadow-2xl">
            <video 
              class="w-full h-full object-cover"
              controls
              preload="metadata"
              poster={getAssetPath("/images/church-welcome-sign.jpg")}
            >
              <source src={getAssetPath("/videos/pastoral-welcome.mp4")} type="video/mp4">
              <p class="p-8 text-center text-gray-600">
                Your browser doesn't support video playback. 
                                  <a href={getAssetPath("/videos/pastoral-welcome.mp4")} class="text-primary-600 hover:text-primary-700 underline">
                  Download the video
                </a>
              </p>
            </video>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
            What to Expect<br class="hidden sm:inline"> on Sunday
          </h2>
          <p class="text-xl text-gray-600">
            Here's what a typical Sunday morning looks like at Living Hope
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Arrival -->
          <Card variant="elevated" class="text-center">
            <div class="p-6">
              <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Arrival & Parking</h3>
              <p class="text-gray-600 mb-4">
                Arrive 10-15 minutes early. We have plenty of free parking, and our greeters will help you find the sanctuary.
              </p>
              <p class="text-sm text-gray-500">
                <strong>Tip:</strong> Look for the "Welcome" signs!
              </p>
            </div>
          </Card>

          <!-- Welcome -->
          <Card variant="elevated" class="text-center">
            <div class="p-6">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Warm Welcome</h3>
              <p class="text-gray-600 mb-4">
                Our greeters will welcome you with a smile and help you get oriented. No pressure - just genuine hospitality.
              </p>
              <p class="text-sm text-gray-500">
                <strong>Tip:</strong> Don't hesitate to ask questions!
              </p>
            </div>
          </Card>

          <!-- Worship -->
          <Card variant="elevated" class="text-center">
            <div class="p-6">
              <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Worship Experience</h3>
              <p class="text-gray-600 mb-4">
                Our services blend traditional and contemporary elements. Participate as much or as little as you're comfortable with.
              </p>
              <p class="text-sm text-gray-500">
                <strong>Duration:</strong> About 60 minutes
              </p>
            </div>
          </Card>

          <!-- Children -->
          <Card variant="elevated" class="text-center">
            <div class="p-6">
              <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Kids Are Welcome</h3>
              <p class="text-gray-600 mb-4">
                Children are always welcome in worship! We offer Sunday Morning Kids Club, Youth Group, Pioneer Program, and Catechism Confirmation Class.
              </p>
              <p class="text-sm text-gray-500">
                <strong>Programs:</strong> Kids Club, Youth Group, Pioneer, Confirmation
              </p>
            </div>
          </Card>

          <!-- Coffee -->
          <Card variant="elevated" class="text-center">
            <div class="p-6">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Coffee & Connection</h3>
              <p class="text-gray-600 mb-4">
                Stay after service for coffee, snacks, and conversation in our fellowship hall. Great way to meet people!
              </p>
              <p class="text-sm text-gray-500">
                <strong>Time:</strong> 15-30 minutes after service
              </p>
            </div>
          </Card>

          <!-- Follow Up -->
          <Card variant="elevated" class="text-center">
            <div class="p-6">
              <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">No Pressure Follow-Up</h3>
              <p class="text-gray-600 mb-4">
                We might send a friendly note or call to see how your visit went, but there's never any pressure to join or commit.
              </p>
              <p class="text-sm text-gray-500">
                <strong>Promise:</strong> Genuine care, not sales pitch
              </p>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Plan Your Visit Form -->
  <section id="plan-visit" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Let Us Know You're Coming
          </h2>
          <p class="text-xl text-gray-600">
            While you're always welcome to just show up, letting us know helps us prepare a special welcome for you!
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">
          
          <!-- Form -->
          <Card variant="elevated">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Plan Your Visit</h3>
              
              <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-4">
                  <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
                    <input type="text" id="firstName" name="firstName" required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
                    <input type="text" id="lastName" name="lastName" required
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                  </div>
                </div>

                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
                  <input type="email" id="email" name="email" required
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>

                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                  <input type="tel" id="phone" name="phone"
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>

                <div>
                  <label for="visitDate" class="block text-sm font-medium text-gray-700 mb-2">When are you planning to visit?</label>
                  <select id="visitDate" name="visitDate"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="">Select a Sunday</option>
                    <option value="this-sunday">This Sunday</option>
                    <option value="next-sunday">Next Sunday</option>
                    <option value="soon">Soon (within a month)</option>
                    <option value="exploring">Just exploring for now</option>
                  </select>
                </div>

                <div>
                  <label for="service" class="block text-sm font-medium text-gray-700 mb-2">Which service interests you?</label>
                  <select id="service" name="service"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="">Select a service</option>
                    <option value="saturday">Saturday 5:00 PM - Traditional</option>
                    <option value="sunday-early">Sunday 8:00 AM - Traditional</option>
                    <option value="sunday-contemporary">Sunday 10:30 AM - Contemporary</option>
                    <option value="monday">Monday 6:30 PM - Evening Service</option>
                    <option value="both">I'd like to learn about both</option>
                  </select>
                </div>

                <div>
                  <label for="groupSize" class="block text-sm font-medium text-gray-700 mb-2">How many people will be with you?</label>
                  <select id="groupSize" name="groupSize"
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="1">Just me</option>
                    <option value="2">2 people</option>
                    <option value="3-4">3-4 people</option>
                    <option value="5+">5 or more people</option>
                  </select>
                </div>

                <div>
                  <label for="children" class="block text-sm font-medium text-gray-700 mb-2">Do you have children who will be joining you?</label>
                  <textarea id="children" name="children" rows="3" placeholder="Please let us know ages so we can prepare appropriate activities"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"></textarea>
                </div>

                <div>
                  <label for="questions" class="block text-sm font-medium text-gray-700 mb-2">Questions or special requests?</label>
                  <textarea id="questions" name="questions" rows="3" placeholder="Anything you'd like us to know or any questions you have"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"></textarea>
                </div>

                <div class="flex items-start">
                  <input type="checkbox" id="newsletter" name="newsletter" 
                         class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
                  <label for="newsletter" class="ml-3 text-sm text-gray-600">
                    I'd like to receive occasional updates about church events and activities
                  </label>
                </div>

                <Button type="submit" variant="primary" size="lg" class="w-full">
                  Submit Visit Plan
                </Button>
              </form>
            </div>
          </Card>

          <!-- Contact Info & FAQ -->
          <div class="space-y-8">
            
            <!-- Quick Contact -->
            <Card>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Prefer to Call or Email?</h3>
                <div class="space-y-4">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <div>
                      <p class="font-medium text-gray-900">Call Us</p>
                      <p class="text-gray-600">414-774-1184</p>
                    </div>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <div>
                      <p class="font-medium text-gray-900">Email Us</p>
                      <p class="text-gray-600">church@livinghopelutheran.org</p>
                    </div>
                  </div>
                </div>
              </div>
            </Card>

            <!-- FAQ -->
            <Card>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Common Questions</h3>
                <Accordion items={faqItems} allowMultiple={true} />
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

</PageLayout> 