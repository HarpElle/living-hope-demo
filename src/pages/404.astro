---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPagePath } from '../utils/paths.js';
---

<BaseLayout title="Page Not Found">
  <div class="min-h-screen bg-gradient-to-br from-primary-700 to-primary-900 flex items-center justify-center px-4">
    <div class="text-center text-white max-w-md">
      <h1 class="text-8xl font-bold mb-4">404</h1>
      <h2 class="text-2xl font-semibold mb-4">Page Not Found</h2>
      <p class="text-primary-100 mb-8">
        Sorry, we couldn't find the page you're looking for. 
        Perhaps you'd like to visit our homepage instead?
      </p>
      <div class="space-y-4">
        <a href={getPagePath("/")} class="btn-secondary-light btn-lg inline-block">
          Return Home
        </a>
        <div class="text-sm text-primary-200">
          <p>Or try one of these popular pages:</p>
          <div class="mt-2 space-x-4">
            <a href={getPagePath("/about")} class="hover:text-white transition-colors">About Us</a>
            <a href={getPagePath("/worship/service-times")} class="hover:text-white transition-colors">Service Times</a>
            <a href={getPagePath("/connect/im-new")} class="hover:text-white transition-colors">I'm New</a>
            <a href={getPagePath("/contact")} class="hover:text-white transition-colors">Contact</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 