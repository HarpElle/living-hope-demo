---
import PageLayout from '../../layouts/PageLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';

const staff = [
  {
    name: "Pastor Mark Aufdemberge",
    title: "Pastor",
    email: "maufdemberge@livinghopelutheran.org",
    phone: "414-774-1184",
    bio: "Pastor Aufdemberge serves Living Hope Lutheran Church with dedication to WELS Lutheran theology and pastoral care. He is committed to preaching God's Word and serving our congregation with faithfulness.",
    specialties: ["Preaching", "Pastoral Care", "WELS Ministry"],
    image: "/images/staff/pastor-aufdemberge.jpg"
  },
  {
    name: "Pastor Thomas Kneser",
    title: "Pastor",
    email: "tkneser@livinghopelutheran.org",
    phone: "414-774-1184",
    bio: "Pastor Kneser brings faithful ministry and biblical teaching to Living Hope Lutheran Church. He is passionate about sharing God's Word and supporting our congregation's spiritual growth.",
    specialties: ["Biblical Teaching", "Pastoral Ministry", "Congregational Care"],
    image: "/images/staff/pastor-kneser.jpg"
  },
  {
    name: "Pastor Timothy Wempner",
    title: "Pastor",
    email: "twempner@livinghopelutheran.org",
    phone: "414-774-1184",
    bio: "Pastor Wempner serves our congregation with commitment to Lutheran doctrine and pastoral ministry. He focuses on worship leadership and spiritual guidance for our church family.",
    specialties: ["Worship Leadership", "Lutheran Doctrine", "Spiritual Guidance"],
    image: "/images/staff/pastor-wempner.jpg"
  },
  {
    name: "Pastor Joshua Zarling",
    title: "Pastor",
    email: "jzarling@livinghopelutheran.org",
    phone: "414-774-1184",
    bio: "Pastor Zarling brings energy and dedication to ministry at Living Hope Lutheran Church. He is committed to serving our congregation and sharing the Gospel message with our community.",
    specialties: ["Gospel Ministry", "Community Outreach", "Pastoral Service"],
    image: "/images/staff/pastor-zarling.jpg"
  }
];
---

<PageLayout title="Our Staff" description="Meet the dedicated team at Living Hope Lutheran Church who are passionate about serving our community and helping you grow in faith.">
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-600 to-secondary-800 text-white pt-32 pb-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Meet Our Team
        </h1>
        <p class="text-xl md:text-2xl text-secondary-100 mb-8">
          Dedicated servants passionate about helping you grow in faith and community
        </p>
      </div>
    </div>
  </section>

  <!-- Staff Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        {staff.map((member) => (
          <Card variant="elevated" class="overflow-hidden">
            <div class="md:flex">
              <!-- Photo -->
              <div class="md:w-1/3">
                <div class="aspect-square bg-gray-200 flex items-center justify-center">
                  <!-- Placeholder for staff photo -->
                  <div class="text-center text-gray-400">
                    <svg class="w-16 h-16 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <p class="text-sm font-medium">{member.name}</p>
                  </div>
                </div>
              </div>
              
              <!-- Content -->
              <div class="md:w-2/3 p-6">
                <h3 class="text-2xl font-bold text-gray-900 mb-2">
                  {member.name}
                </h3>
                <p class="text-primary-600 font-semibold mb-4">
                  {member.title}
                </p>
                
                <p class="text-gray-600 mb-4 leading-relaxed">
                  {member.bio}
                </p>
                
                <!-- Specialties -->
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-gray-900 mb-2">Specialties:</h4>
                  <div class="flex flex-wrap gap-2">
                    {member.specialties.map((specialty) => (
                      <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">
                        {specialty}
                      </span>
                    ))}
                  </div>
                </div>
                
                <!-- Contact Info -->
                <div class="space-y-2 text-sm text-gray-600">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <a href={`mailto:${member.email}`} class="hover:text-primary-600 transition-colors">
                      {member.email}
                    </a>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <a href={`tel:${member.phone.replace(/[^\d]/g, '')}`} class="hover:text-primary-600 transition-colors">
                      {member.phone}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">
          Get in Touch
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          Our team is here to support you on your faith journey. Don't hesitate to reach out with questions, prayer requests, or just to say hello.
        </p>
        
        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <Card class="p-6 text-center">
            <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Call Us</h3>
            <p class="text-gray-600">414-774-1184</p>
          </Card>
          
          <Card class="p-6 text-center">
            <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Email Us</h3>
            <p class="text-gray-600">church@livinghopelutheran.org</p>
          </Card>
          
          <Card class="p-6 text-center">
            <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Visit Us</h3>
            <p class="text-gray-600">1337 S 100th St<br>West Allis, WI 53214</p>
          </Card>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary" size="lg">
            Contact Form
          </Button>
          <Button href="/connect/im-new" variant="secondary" size="lg">
            Plan Your Visit
          </Button>
        </div>
      </div>
    </div>
  </section>

</PageLayout> 