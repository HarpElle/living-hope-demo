---
import PageLayout from '../../layouts/PageLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<PageLayout 
  title="Service Times - Living Hope Lutheran Church"
  description="Join us for worship at Living Hope Lutheran Church. We offer four weekly services: Saturday 5:00 PM, Sunday 8:00 AM & 10:30 AM, and Monday 6:30 PM."
>
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-primary-600 to-primary-800 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Worship With Us
        </h1>
        <p class="text-xl md:text-2xl text-primary-100 mb-8">
          Four weekly opportunities to gather in worship and fellowship
        </p>
        <p class="text-lg text-primary-200">
          All are welcome at Living Hope Lutheran Church - come as you are!
        </p>
      </div>
    </div>
  </section>

  <!-- Service Times Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Weekly Service Schedule
          </h2>
          <p class="text-xl text-gray-600">
            Choose the service time that works best for you and your family
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
          
          <!-- Saturday Evening -->
          <Card variant="elevated" class="text-center h-full">
            <div class="p-6">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Saturday Evening</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">5:00 PM</p>
              <p class="text-gray-600 mb-4">Traditional Worship</p>
              <p class="text-sm text-gray-500">
                Perfect for those who prefer Saturday worship or have busy Sunday schedules
              </p>
            </div>
          </Card>

          <!-- Sunday Early -->
          <Card variant="elevated" class="text-center h-full">
            <div class="p-6">
              <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Sunday Morning</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">8:00 AM</p>
              <p class="text-gray-600 mb-4">Traditional Worship</p>
              <p class="text-sm text-gray-500">
                Classic Lutheran liturgy with hymns and organ music
              </p>
            </div>
          </Card>

          <!-- Sunday Contemporary -->
          <Card variant="elevated" class="text-center h-full">
            <div class="p-6">
              <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Sunday Morning</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">10:30 AM</p>
              <p class="text-gray-600 mb-4">Contemporary Service</p>
              <p class="text-sm text-gray-500">
                Modern worship with praise band - also livestreamed on YouTube
              </p>
            </div>
          </Card>

          <!-- Monday Evening -->
          <Card variant="elevated" class="text-center h-full">
            <div class="p-6">
              <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Monday Evening</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">6:30 PM</p>
              <p class="text-gray-600 mb-4">Evening Service</p>
              <p class="text-sm text-gray-500">
                Intimate worship setting, perfect for those who can't make weekend services
              </p>
            </div>
          </Card>
        </div>

        <!-- Special Note -->
        <Card class="bg-primary-50 border-primary-200">
          <div class="p-6 text-center">
            <h3 class="text-xl font-bold text-primary-800 mb-4">
              ðŸŽ¥ Watch Online
            </h3>
            <p class="text-primary-700 mb-4">
              Can't make it in person? Join us online for our Sunday 10:30 AM service, livestreamed on our YouTube channel: <strong>@Living.Hope.Lutheran.Church</strong>
            </p>
            <Button href="/worship/watch-online" variant="primary">
              Watch Live Online
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- What to Expect -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            What to Expect
          </h2>
          <p class="text-xl text-gray-600">
            New to Lutheran worship? Here's what you can expect at our services
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          
          <!-- Traditional Services -->
          <Card variant="elevated">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">Traditional Services</h3>
              <p class="text-gray-600 mb-6">
                <strong>Saturday 5:00 PM, Sunday 8:00 AM</strong>
              </p>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Classic Lutheran liturgy and hymns
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Organ and piano accompaniment
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Communion served every Sunday
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Services typically last 60-75 minutes
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Peaceful, reverent atmosphere
                </li>
              </ul>
            </div>
          </Card>

          <!-- Contemporary Service -->
          <Card variant="elevated">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">Contemporary Service</h3>
              <p class="text-gray-600 mb-6">
                <strong>Sunday 10:30 AM</strong>
              </p>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Modern worship songs and praise band
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Guitar, drums, and contemporary music
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Same Gospel message, different style
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Livestreamed on YouTube
                </li>
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  Family-friendly and welcoming
                </li>
              </ul>
            </div>
          </Card>
        </div>

        <!-- Children's Programs -->
        <Card class="mt-8">
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4 text-center">Children's Programs</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <h4 class="font-bold text-gray-900 mb-2">Sunday Morning Kids Club</h4>
                <p class="text-gray-600 text-sm mb-4">Age-appropriate activities during the 10:30 AM service</p>
                
                <h4 class="font-bold text-gray-900 mb-2">Youth Group</h4>
                <p class="text-gray-600 text-sm mb-4">Regular activities and fellowship for teens</p>
              </div>
              <div>
                <h4 class="font-bold text-gray-900 mb-2">Pioneer Program</h4>
                <p class="text-gray-600 text-sm mb-4">Christian education and activities for children</p>
                
                <h4 class="font-bold text-gray-900 mb-2">Confirmation Class</h4>
                <p class="text-gray-600 text-sm">Catechism instruction for young people</p>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">
          Ready to Join Us?
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          We'd love to welcome you to any of our services. Come as you are!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/connect/im-new" variant="secondary" size="lg">
            Plan Your Visit
          </Button>
          <Button href="/contact" variant="outline" size="lg">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </section>

</PageLayout> 