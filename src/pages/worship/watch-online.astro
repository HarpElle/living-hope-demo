---
import PageLayout from '../../layouts/PageLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<PageLayout 
  title="Watch Online - Living Hope Lutheran Church"
  description="Join us for worship online! Watch our Sunday 10:30 AM service livestreamed on YouTube @Living.Hope.Lutheran.Church"
>
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-primary-600 to-primary-800 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Watch Online
        </h1>
        <p class="text-xl md:text-2xl text-primary-100 mb-8">
          Join us for worship from anywhere in the world
        </p>
        <p class="text-lg text-primary-200">
          Sunday 10:30 AM service livestreamed every week
        </p>
      </div>
    </div>
  </section>

  <!-- Livestream Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Video Placeholder -->
        <Card variant="elevated" class="mb-12">
          <div class="aspect-video bg-gray-900 rounded-lg overflow-hidden relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <div class="w-24 h-24 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold mb-2">Live Stream</h3>
                <p class="text-gray-300 mb-4">Sunday 10:30 AM Contemporary Service</p>
                <p class="text-sm text-gray-400">
                  Stream will appear here 15 minutes before service begins
                </p>
              </div>
            </div>
          </div>
        </Card>

        <!-- YouTube Channel Info -->
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Find Us on YouTube
          </h2>
          <p class="text-xl text-gray-600 mb-6">
            Subscribe to our channel for live services and archived sermons
          </p>
          <Card class="bg-red-50 border-red-200 max-w-2xl mx-auto">
            <div class="p-6 text-center">
              <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">
                @Living.Hope.Lutheran.Church
              </h3>
              <p class="text-gray-600 mb-4">
                Subscribe to never miss a service or special event
              </p>
              <Button href="https://www.youtube.com/@Living.Hope.Lutheran.Church" variant="primary" target="_blank">
                Visit Our YouTube Channel
              </Button>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Schedule -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Online Service Schedule
          </h2>
          <p class="text-xl text-gray-600">
            Join us live or watch archived services anytime
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          
          <!-- Live Service -->
          <Card variant="primary" class="text-center">
            <div class="p-8">
              <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-4">Live Service</h3>
              <p class="text-xl font-bold text-white mb-2">Sunday 10:30 AM</p>
              <p class="text-primary-100 mb-4">Contemporary Worship</p>
              <p class="text-sm text-primary-200">
                Stream begins at 10:15 AM with pre-service music
              </p>
            </div>
          </Card>

          <!-- Archived Services -->
          <Card variant="elevated" class="text-center">
            <div class="p-8">
              <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-4">Archived Services</h3>
              <p class="text-xl font-bold text-primary-600 mb-2">Available Anytime</p>
              <p class="text-gray-600 mb-4">Previous Sermons & Services</p>
              <p class="text-sm text-gray-500">
                Watch past services and sermons on our YouTube channel
              </p>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Technical Info -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Technical Information
          </h2>
          <p class="text-xl text-gray-600">
            Everything you need to know about watching online
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          
          <!-- Quality -->
          <Card class="text-center">
            <div class="p-6">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="font-bold text-gray-900 mb-2">HD Quality</h3>
              <p class="text-gray-600 text-sm">
                High-definition video and clear audio for the best experience
              </p>
            </div>
          </Card>

          <!-- Devices -->
          <Card class="text-center">
            <div class="p-6">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="font-bold text-gray-900 mb-2">Any Device</h3>
              <p class="text-gray-600 text-sm">
                Watch on computer, tablet, phone, or smart TV
              </p>
            </div>
          </Card>

          <!-- Chat -->
          <Card class="text-center">
            <div class="p-6">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <h3 class="font-bold text-gray-900 mb-2">Live Chat</h3>
              <p class="text-gray-600 text-sm">
                Connect with others during the live stream
              </p>
            </div>
          </Card>
        </div>

        <!-- FAQ -->
        <Card class="mt-12">
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
              Frequently Asked Questions
            </h3>
            
            <div class="space-y-6">
              <div class="border-b border-gray-200 pb-4">
                <h4 class="font-bold text-gray-900 mb-2">Do I need to create an account to watch?</h4>
                <p class="text-gray-600">No account needed! You can watch directly on YouTube without signing in, though subscribing helps you get notifications.</p>
              </div>

              <div class="border-b border-gray-200 pb-4">
                <h4 class="font-bold text-gray-900 mb-2">What if I miss the live service?</h4>
                <p class="text-gray-600">No problem! All services are automatically saved to our YouTube channel so you can watch anytime.</p>
              </div>

              <div class="border-b border-gray-200 pb-4">
                <h4 class="font-bold text-gray-900 mb-2">Can I participate in communion online?</h4>
                <p class="text-gray-600">While we encourage in-person communion, you're welcome to prepare bread and wine/juice at home and participate during the service.</p>
              </div>

              <div>
                <h4 class="font-bold text-gray-900 mb-2">How can I give an offering online?</h4>
                <p class="text-gray-600">Visit our giving page or use the link provided during the online service to make a secure online donation.</p>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">
          Join Us This Sunday
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          Whether online or in person, we'd love to worship with you!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
                          <Button href="https://www.youtube.com/@Living.Hope.Lutheran.Church" variant="secondary" size="lg" target="_blank">
            Watch on YouTube
          </Button>
          <Button href="/worship/service-times" variant="outline" size="lg">
            In-Person Services
          </Button>
          <Button href="/connect/im-new" variant="outline" size="lg">
            Plan Your Visit
          </Button>
        </div>
      </div>
    </div>
  </section>

</PageLayout> 