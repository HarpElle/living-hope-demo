---
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';

const {
  title = "Take Your Next Step",
  subtitle = "Whether you're new to faith or looking to grow deeper, there's a place for you here",
  steps = [
    {
      title: "Visit Us",
      description: "Join us for worship and experience our welcoming community firsthand",
      icon: "visit",
      action: { text: "Plan Your Visit", href: "/connect/im-new" },
      featured: false
    },
    {
      title: "Connect",
      description: "Find your community through small groups, Bible studies, and fellowship",
      icon: "connect",
      action: { text: "Find a Group", href: "/connect/small-groups" },
      featured: false
    },
    {
      title: "Serve",
      description: "Use your gifts to make a difference in our church and community",
      icon: "serve",
      action: { text: "Get Involved", href: "/connect/volunteer" },
      featured: false
    },
    {
      title: "Grow",
      description: "Deepen your faith through classes, mentorship, and spiritual practices",
      icon: "grow",
      action: { text: "Learn More", href: "/connect/classes" },
      featured: false
    }
  ]
} = Astro.props;

// Icon components
const icons = {
  visit: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2v6m0 0l2-2m-2 2l-2-2"></path>`,
  connect: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>`,
  serve: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>`,
  grow: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>`
};
---

<section class="py-16 bg-gradient-to-br from-primary-50 to-secondary-50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Steps Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      {steps.map((step, index) => (
        <Card 
          variant="elevated"
          class={`text-center h-full ${step.featured ? 'lg:scale-105 ring-2 ring-primary-200' : ''}`}
        >
          <div class="p-6 h-full flex flex-col">
            <!-- Icon -->
            <div class="w-16 h-16 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-6">
              <svg 
                class="w-8 h-8 text-primary-600" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
                set:html={icons[step.icon]}
              >
              </svg>
            </div>

            <!-- Step Number -->
            <div class="text-sm font-semibold text-primary-600 mb-3">
              Step {index + 1}
            </div>

            <!-- Content -->
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              {step.title}
            </h3>
            
            <p class="text-gray-600 mb-6 flex-grow">
              {step.description}
            </p>

            <!-- Action Button -->
            <Button 
              href={step.action.href} 
              variant="primary"
              size="md"
              class="w-full"
            >
              {step.action.text}
            </Button>
          </div>
        </Card>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center">
      <div class="bg-white rounded-2xl shadow-xl p-8 max-w-3xl mx-auto">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Questions About Your Next Step?
        </h3>
        <p class="text-gray-600 mb-6">
          We're here to help you find your place in our church family. Reach out anytime - we'd love to connect with you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary" size="lg">
            Contact Us
          </Button>
          <Button href="/about/staff" variant="secondary" size="lg">
            Meet Our Team
          </Button>
        </div>
      </div>
    </div>
  </div>
</section> 