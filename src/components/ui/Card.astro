---
const { 
  variant = 'default',
  hover = false,
  class: className = '',
  ...props 
} = Astro.props;

const baseClasses = 'rounded-lg overflow-hidden';

const variants = {
  default: 'bg-white shadow-md',
  elevated: 'bg-white shadow-lg',
  outlined: 'bg-white border border-gray-200',
  primary: 'bg-white border-2 border-primary-600 shadow-xl ring-2 ring-primary-100',
  dark: 'bg-primary-900 text-white shadow-lg',
};

const hoverClasses = hover ? 'hover:shadow-xl hover:-translate-y-1 transition-all duration-300' : '';

const classes = `${baseClasses} ${variants[variant]} ${hoverClasses} ${className}`;
---

<div class={classes} {...props}>
  <slot />
</div> 