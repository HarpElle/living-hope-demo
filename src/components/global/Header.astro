---
// Header component with navigation
import SearchBox from '../search/SearchBox.astro';
import { getAssetPath } from '../../utils/paths.js';
---

<header class="fixed top-0 w-full bg-white shadow-md z-50" x-data="{ mobileMenuOpen: false }">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center hover:opacity-80 transition-opacity" aria-label="Living Hope Lutheran Church - Home">
        <img src={getAssetPath("/images/logo.svg")} alt="Living Hope Lutheran Church" class="w-12 h-12">
        <div class="ml-3">
          <h1 class="text-lg font-semibold text-primary-900">Living Hope</h1>
          <p class="text-xs text-gray-600">Lutheran Church</p>
        </div>
      </a>
      
      <!-- Main Navigation - Desktop -->
      <ul class="hidden lg:flex items-center space-x-8">
        <li><a href="/about" class="nav-link">About</a></li>
        <li><a href="/worship" class="nav-link">Worship</a></li>
        <li><a href="/connect" class="nav-link">Connect</a></li>
        <li><a href="/serve" class="nav-link">Serve</a></li>
        <li><a href="/contact" class="nav-link">Contact</a></li>
      </ul>
      
      <!-- Search & CTA Buttons - Desktop -->
      <div class="hidden lg:flex items-center space-x-4">
        <div class="w-64">
          <SearchBox 
            variant="header" 
            placeholder="Search..."
            showButton={false}
          />
        </div>
        <a href="/give" class="btn-secondary">Give</a>
        <a href="/connect/im-new" class="btn-primary">I'm New</a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        class="lg:hidden p-2 rounded-md text-gray-700 hover:text-primary-700 hover:bg-gray-100 transition-colors"
        @click="mobileMenuOpen = !mobileMenuOpen"
        :aria-expanded="mobileMenuOpen"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path 
            x-show="!mobileMenuOpen" 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
          <path 
            x-show="mobileMenuOpen" 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M6 18L18 6M6 6l12 12"
          ></path>
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Navigation Drawer -->
  <div 
    class="lg:hidden fixed inset-0 z-50"
    x-show="mobileMenuOpen"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    style="display: none;"
  >
    <!-- Backdrop -->
    <div 
      class="fixed inset-0 bg-black/50"
      @click="mobileMenuOpen = false"
    ></div>
    
    <!-- Drawer -->
    <div 
      class="fixed right-0 top-0 h-full w-80 bg-white shadow-xl"
      x-transition:enter="transition ease-out duration-300 transform"
      x-transition:enter-start="translate-x-full"
      x-transition:enter-end="translate-x-0"
      x-transition:leave="transition ease-in duration-200 transform"
      x-transition:leave-start="translate-x-0"
      x-transition:leave-end="translate-x-full"
    >
      <!-- Mobile Menu Header -->
      <div class="flex items-center justify-between p-4 border-b">
        <a href="/" class="flex items-center hover:opacity-80 transition-opacity" aria-label="Living Hope Lutheran Church - Home" @click="mobileMenuOpen = false">
          <img src={getAssetPath("/images/logo.svg")} alt="Living Hope Lutheran Church" class="w-10 h-10">
          <div class="ml-3">
            <h2 class="font-semibold text-primary-900">Living Hope</h2>
            <p class="text-xs text-gray-600">Lutheran Church</p>
          </div>
        </a>
        <button 
          @click="mobileMenuOpen = false"
          class="p-2 rounded-md text-gray-700 hover:text-primary-700 hover:bg-gray-100"
          aria-label="Close menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Menu Content -->
      <div class="p-4">
        <!-- Mobile Search -->
        <div class="mb-6">
          <SearchBox 
            variant="inline" 
            placeholder="Search..."
            showButton={true}
          />
        </div>
        
        <!-- Navigation Links -->
        <nav class="space-y-4 mb-8">
          <a href="/about" class="block py-3 px-4 text-gray-700 hover:text-primary-700 hover:bg-gray-50 rounded-lg transition-colors">About</a>
          <a href="/worship" class="block py-3 px-4 text-gray-700 hover:text-primary-700 hover:bg-gray-50 rounded-lg transition-colors">Worship</a>
          <a href="/connect" class="block py-3 px-4 text-gray-700 hover:text-primary-700 hover:bg-gray-50 rounded-lg transition-colors">Connect</a>
          <a href="/serve" class="block py-3 px-4 text-gray-700 hover:text-primary-700 hover:bg-gray-50 rounded-lg transition-colors">Serve</a>
          <a href="/contact" class="block py-3 px-4 text-gray-700 hover:text-primary-700 hover:bg-gray-50 rounded-lg transition-colors">Contact</a>
        </nav>
        
        <!-- CTA Buttons -->
        <div class="space-y-3">
          <a href="/connect/im-new" class="btn-primary w-full text-center block">I'm New</a>
          <a href="/give" class="btn-secondary w-full text-center block">Give Online</a>
        </div>
        
        <!-- Contact Info -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h3 class="font-semibold text-gray-900 mb-3">Contact Us</h3>
          <div class="space-y-2 text-sm text-gray-600">
            <p>1337 South 100th Street</p>
            <p>West Allis, WI 53214</p>
            <p class="font-medium text-primary-700">414-774-1184</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</header> 