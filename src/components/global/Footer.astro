---
// Footer component with contact info and links
import NewsletterSignup from '../forms/NewsletterSignup.astro';
import { getAssetPath, getPagePath } from '../../utils/paths.js';
---

<footer class="bg-primary-900 text-white">
  <div class="container mx-auto px-4 py-12">
    <!-- Newsletter Signup -->
    <div class="mb-12 pb-8 border-b border-primary-700">
      <div class="max-w-2xl mx-auto text-center">
        <NewsletterSignup 
          variant="compact"
          theme="dark"
          title="Stay Connected with Living Hope"
          description="Get updates about worship, events, and community news delivered to your inbox."
        />
      </div>
    </div>

    <div class="grid md:grid-cols-4 gap-8">
      <!-- Church Info -->
      <div class="md:col-span-1">
        <div class="flex items-center mb-4">
          <img src={getAssetPath("/images/logo-white.svg")} alt="Living Hope Lutheran Church" class="w-10 h-10">
          <div class="ml-3">
            <h3 class="font-semibold">Living Hope</h3>
            <p class="text-sm text-primary-200">Lutheran Church</p>
          </div>
        </div>
        <p class="text-primary-200 text-sm leading-relaxed">
          A WELS community of faith serving West Allis since 1966, sharing God's love through worship, fellowship, service, and education. We also operate a school and childcare center.
        </p>
      </div>

      <!-- Contact Information -->
      <div>
        <h4 class="font-semibold mb-4">Contact Us</h4>
        <div class="space-y-2 text-sm text-primary-200">
          <p>1337 South 100th Street</p>
          <p>West Allis, WI 53214</p>
          <p class="font-medium text-white">414-774-1184</p>
          <p>church@livinghopelutheran.org</p>
        </div>
        <div class="mt-4">
          <a href={getPagePath("/contact/location")} class="text-accent-gold hover:text-white transition-colors text-sm">
            Get Directions →
          </a>
        </div>
      </div>

      <!-- Service Times -->
      <div>
        <h4 class="font-semibold mb-4">Worship Times</h4>
        <div class="space-y-3 text-sm">
          <div>
            <p class="font-medium text-white">Saturday Traditional</p>
            <p class="text-primary-200">5:00 PM</p>
          </div>
          <div>
            <p class="font-medium text-white">Sunday Traditional</p>
            <p class="text-primary-200">8:00 AM</p>
          </div>
          <div>
            <p class="font-medium text-white">Sunday Contemporary</p>
            <p class="text-primary-200">10:30 AM</p>
          </div>
          <div>
            <p class="font-medium text-white">Monday Evening</p>
            <p class="text-primary-200">6:30 PM</p>
          </div>
        </div>
        <div class="mt-4">
          <a href={getPagePath("/worship/service-times")} class="text-accent-gold hover:text-white transition-colors text-sm">
            View Full Schedule →
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <div class="space-y-2 text-sm">
          <a href={getPagePath("/about")} class="block text-primary-200 hover:text-white transition-colors">About Us</a>
          <a href={getPagePath("/connect/im-new")} class="block text-primary-200 hover:text-white transition-colors">I'm New</a>
          <a href={getPagePath("/sermons")} class="block text-primary-200 hover:text-white transition-colors">Sermons</a>
          <a href={getPagePath("/events")} class="block text-primary-200 hover:text-white transition-colors">Events</a>
          <a href={getPagePath("/serve/ministries")} class="block text-primary-200 hover:text-white transition-colors">Ministries</a>
          <a href={getPagePath("/give")} class="block text-primary-200 hover:text-white transition-colors">Give Online</a>
        </div>
      </div>
    </div>

    <!-- Social Media & Bottom Bar -->
    <div class="border-t border-primary-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <!-- Social Media -->
        <div class="flex items-center space-x-4 mb-4 md:mb-0">
          <span class="text-sm text-primary-200">Connect with us:</span>
          <a href="https://www.facebook.com/LivingHopeLutheranChurchWestAllis" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-primary-200 hover:text-white transition-colors"
             aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="https://www.youtube.com/@Living.Hope.Lutheran.Church" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-primary-200 hover:text-white transition-colors"
             aria-label="YouTube">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
          <a href="https://x.com/LivingHopeLuth" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-primary-200 hover:text-white transition-colors"
             aria-label="X (Twitter)">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="https://itunes.apple.com/podcast/good-shepherds-church-podcast/id376772276?mt=2" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-primary-200 hover:text-white transition-colors"
             aria-label="Apple Podcasts">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.4c5.302 0 9.6 4.298 9.6 9.6s-4.298 9.6-9.6 9.6S2.4 17.302 2.4 12 6.698 2.4 12 2.4zm0 3.6c-3.314 0-6 2.686-6 6 0 1.657.672 3.157 1.757 4.243l.707-.707C7.672 14.743 7.2 13.414 7.2 12c0-2.651 2.149-4.8 4.8-4.8s4.8 2.149 4.8 4.8c0 1.414-.472 2.743-1.264 3.536l.707.707C17.328 15.157 18 13.657 18 12c0-3.314-2.686-6-6-6zm0 2.4c-1.988 0-3.6 1.612-3.6 3.6 0 .995.403 1.895 1.054 2.546l.707-.707C9.803 13.081 9.6 12.566 9.6 12c0-1.325 1.075-2.4 2.4-2.4s2.4 1.075 2.4 2.4c0 .566-.203 1.081-.561 1.439l.707.707C14.997 13.895 15.4 12.995 15.4 12c0-1.988-1.612-3.6-3.6-3.6zm0 2.4c-.663 0-1.2.537-1.2 1.2s.537 1.2 1.2 1.2 1.2-.537 1.2-1.2-.537-1.2-1.2-1.2z"/>
            </svg>
          </a>
        </div>

        <!-- Copyright -->
        <div class="text-center md:text-right">
          <p class="text-sm text-primary-200">
            © 2025 Living Hope Lutheran Church
          </p>
          <p class="text-xs text-primary-300 mt-1">
            A congregation of the Wisconsin Evangelical Lutheran Synod (WELS)
          </p>
        </div>
      </div>
    </div>
  </div>
</footer> 